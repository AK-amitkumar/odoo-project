<?xml version="1.0"?> 
<odoo> 

    <record id="invoice_form_view_extension" model="ir.ui.view"> 
        <field name="name">invoice_form_view_extension</field> 
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="type">form</field> 
        <field name="arch" type="xml">

            <xpath expr="//field[@name ='invoice_line_ids']/tree/field[@name ='price_unit']" position="replace">
            </xpath>

            <xpath expr="//field[@name ='invoice_line_ids']/tree/field[@name ='quantity']" position="after">
                <field name="assessed_Price"/>
                <field name="price_unit" string="Declared Price"/>
            </xpath>

        </field> 
    </record>

    <record id="invoice_form_view_extension1" model="ir.ui.view"> 
        <field name="name">invoice_form_view_extension1</field> 
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="type">form</field> 
        <field name="arch" type="xml">

            <xpath expr="//field[@name ='invoice_line_ids']/tree/field[@name ='price_unit']" position="replace">
            </xpath>

            <xpath expr="//field[@name ='invoice_line_ids']/tree/field[@name ='quantity']" position="after">
                <field name="assessed_Price"/>
                <field name="price_unit" string="Declared Price"/>
            </xpath>
        </field> 
    </record>


    <record id="invoice_form_view_extension2" model="ir.ui.view"> 
        <field name="name">invoice_form_view_extension2</field> 
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="type">form</field> 
        <field name="arch" type="xml">

            <xpath expr="//field[@name ='order_line']/tree/field[@name ='price_unit']" position="replace">
            </xpath>

            <xpath expr="//field[@name ='order_line']/tree/field[@name ='product_qty']" position="after">
                <field name="assessed_Price"/>
                <field name="price_unit" string="Declared Price"/>
            </xpath>
        </field> 
    </record>

</odoo> 